@model List<Filmify.Application.DTOs.Film.FilmDto>

@if (Model != null && Model.Any())
{
    <div class="row gy-4">
        @foreach (var film in Model)
        {
            <div class="col-6 col-sm-12 col-lg-6">
                <div class="card card--list">
                    <div class="row">
                        <div class="col-12 col-sm-4">
                            <div class="card__cover">
                                <img src="~/img/covers/@film.CoverImage" alt="@film.FilmTitle">
                                <a href="#" class="card__play"><i class="icon ion-ios-play"></i></a>
                            </div>
                        </div>
                        <div class="col-12 col-sm-8">
                            <div class="card__content">
                                <h3 class="card__title"><a href="#">@film.FilmTitle</a></h3>
                                <span class="card__category">
                                    @if(film.Tags != null)
                                    {
                                        @foreach(var tag in film.Tags)
                                        {
                                            <a href="#">@tag</a>
                                        }
                                    }
                                </span>

                                <div class="card__wrap">
                                    <span class="card__rate"><i class="icon ion-ios-star"></i>@film.FilmScore</span>
                                    <ul class="card__list">
                                        <li>HD</li>
                                        <li>16+</li>
                                    </ul>
                                </div>

                                <div class="card__description">
                                    @* <p>@film.Description ?? "No description available."</p> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
