@using Filmify.Application.DTOs.Tag;
@using Filmify.Application.DTOs.Box;
@using Filmify.Application.DTOs.Category;


@model Filmify.Application.DTOs.Film.FilmCreateDto

<form id="createFilmForm" method="post" enctype="multipart/form-data">
    <div class="modal-header">
        <h5 class="modal-title">Create New Film</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="FilmTitle" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Duration (minutes)</label>
            <input asp-for="Duration" type="number" class="form-control" />
        </div>
        <div class="mb-3">
    <label class="form-label">Category</label>
    <select asp-for="CategoryId" class="form-select"
            asp-items="@(new SelectList(ViewBag.Categories ?? new List<CategoryDto>(), "CategoryId", "Name"))">
        <option value="">-- Select Category --</option>
    </select>
</div>

        <div class="mb-3">
            <label class="form-label">Capacity</label>
            <input asp-for="Capacity" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Cover</label>
            <input type="file" name="coverFile" class="form-control" />
        </div>
        <input type="hidden" id="TagIdsHidden" name="RawTagIds" value="" />
        <div id="tagContainer" class="d-flex flex-wrap gap-2 mb-2"></div>
    </div>
     <div class="d-flex mb-2">
        <input type="text" id="newTagInput" class="form-control me-2" placeholder="Add new tag" />
        <button type="button" class="btn btn-secondary" id="addTagBtn">Add</button>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
