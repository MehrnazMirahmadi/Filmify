@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="sign section--bg" data-bg="~/img/section/section.jpg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-5">
                <div class="sign__content">
                    <form asp-action="Login" method="post" class="sign__form">
                        <a href="~/Home/Index" class="sign__logo text-center d-block mb-4">
                            <img src="~/img/logo.svg" alt="Logo">
                        </a>

                        <div class="sign__group">
                            <input asp-for="Email" class="sign__input"  placeholder="Email" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="sign__group">
                            <input asp-for="Password" class="sign__input" placeholder="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="sign__group sign__group--checkbox">
                            <input asp-for="RememberMe" id="remember" type="checkbox" />
                            <label for="remember">Remember Me</label>
                        </div>

                        <button class="sign__btn w-100" type="submit">Sign in</button>

                        @if(ViewBag.Error != null)
                        {
                            <div class="text-danger mt-2">@ViewBag.Error</div>
                        }
                     


                        <div class="mt-3 text-center">
                            <span class="sign__text d-block">Don't have an account? <a href="Register">Sign up!</a></span>
                            <span class="sign__text d-block"><a href="#">Forgot password?</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
