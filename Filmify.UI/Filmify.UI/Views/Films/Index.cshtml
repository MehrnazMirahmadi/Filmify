 @model List<Filmify.Application.DTOs.Film.FilmDto>
 @section Styles {
   <link rel="stylesheet" href="../css/bootstrap.min.css">
}

<div class="sign__content">
    <div class="sign__form">
        <a href="index.html" class="sign__logo">
            <img src="img/logo.svg" alt="">
        </a>

        <h2 class="card__title">Films</h2>
        
        <!-- Add New Film Button -->
        <div class="mb-3">
            <button type="button" class="btn btn-success mb-3" id="addNewFilmBtn">
                <i class="fas fa-plus"></i> Add New Film
            </button>
        </div>
        <div class="sign__group">
            <table class="sign__table table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Boxes</th>
                        <th>Tags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var film in Model)
                    {
                        <tr>
                            <td>@film.FilmTitle</td>
                            <td>@string.Join(", ", film.Boxes?.Select(b => b.BoxName) ?? new List<string>())</td>
                            <td>@string.Join(", ", film.Tags?.Select(t => t.TagText) ?? new List<string>())</td>
                            <td>
                              
                              <a href="javascript:void(0)" 
                                 data-id="@film.FilmId" 
                                 class="edit-film btn btn-sm btn-outline-primary me-2" 
                                 title="Edit">
                                  <i class="fas fa-edit"></i>
                              </a>

                              <a href="@Url.Action("Delete", "Films", new { id = film.FilmId })" 
                                 onclick="return confirm('Are you sure you want to delete this film?');" 
                                 class="btn btn-sm btn-outline-danger" 
                                 title="Delete">
                                  <i class="fas fa-trash"></i>
                              </a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="filmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content p-4" id="filmModalContent">
       
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>




@section Scripts {
    <script src="js/jquery.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>

}

