@model Filmify.Application.DTOs.Film.PagedResult<Filmify.Application.DTOs.Film.FilmDto>

<div class="row">
    @foreach (var film in Model.Items)
    {
        <div class="col-6 col-sm-4 col-lg-3 col-xl-2 mb-4">
            <div class="card">
                <div class="card__cover">
                    <img src="~/img/covers/@film.CoverImage" alt="@film.FilmTitle" />
                </div>
                <div class="card__content">
                    <h3 class="card__title">@film.FilmTitle</h3>
                </div>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@await Html.PartialAsync("_Pagination", new Filmify.UI.Models.PaginationViewModel
{
    CurrentPage = Model.PageNumber,
    TotalPages = Model.TotalPages,
    Search = "", 
    ActionName = "GetAll",
    ControllerName = "Films"
})
